<?xml version="1.0" encoding="UTF-8"?>
<dao xmlns="http://jelix.org/ns/dao/1.0">
    <datasources>
        <primarytable name="categorie" realname="categorie" primarykey="categorie_id" />
    </datasources>
    <record>
        <property name="categorie_id" fieldname="categorie_id" datatype="int" autoincrement="true"/>
        <property name="categorie_name" fieldname="categorie_name" datatype="varchar" required="true" maxlength="150"/>
        <property name="categorie_namealias" fieldname="categorie_namealias" datatype="varchar" required="true" maxlength="255"/>
        <property name="categorie_vignette" fieldname="categorie_vignette" datatype="varchar" required="true" maxlength="255"/>
        <property name="categorie_ispublie" fieldname="categorie_ispublie" datatype="tinyint" required="true"/>
        <property name="categorie_datepublication" fieldname="categorie_datepublication" datatype="datetime" default=""/>
        <property name="categorie_datecreation" fieldname="categorie_datecreation" datatype="datetime" required="true"/>
        <property name="categorie_datemodification" fieldname="categorie_datemodification" datatype="datetime" default=""/>
    </record>
    <factory>
        <method name="getListByStatus" type="select">
            <parameter name="is_publie" />
            <conditions>
                <eq property="categorie_ispublie" expr="$is_publie" />
            </conditions>
            <order>
                <orderitem property="categorie_datecreation" way="desc" />
            </order>
        </method>
    </factory>
</dao>
