<?xml version="1.0" encoding="UTF-8"?>
<dao xmlns="http://jelix.org/ns/dao/1.0">
    <datasources>
        <primarytable name="pages" realname="pages" primarykey="id" />
    </datasources>
    <record>
        <property name="id" fieldname="id" datatype="int" autoincrement="true"/>
        <property name="name" fieldname="name" datatype="varchar" required="true" maxlength="125"/>
        <property name="label" fieldname="label" datatype="varchar" required="true" maxlength="50"/>
        <property name="title" fieldname="title" datatype="varchar" required="true" maxlength="50"/>
        <property name="content" fieldname="content" datatype="text" required="true"/>
        <property name="is_publie" fieldname="is_publie" datatype="tinyint" required="true" default="0"/>
        <property name="is_removed" fieldname="is_removed" datatype="tinyint" required="true" default="0"/>
        <property name="meta_title" fieldname="meta_title" datatype="varchar" required="true" maxlength="255"/>
        <property name="meta_description" fieldname="meta_description" datatype="varchar" required="true" maxlength="255"/>
        <property name="has_pub" fieldname="has_pub" datatype="tinyint" required="true" default="1"/>
        <!--<property name="" fieldname="" datatype="string/int/float/date"
        required="yes" maxlength="" minlength="" regexp="" sequence=""
        updatepattern="" insertpattern="" selectpattern=""/>-->
    </record>
