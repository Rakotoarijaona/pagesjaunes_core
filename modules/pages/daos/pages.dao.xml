        <method name="getByName" type="selectfirst">
           <parameter name="name" />
           <conditions>
              <eq property="name" expr="$name" />
           </conditions>
        </method>
        <method name="getByTitle" type="selectfirst">
           <parameter name="title" />
           <conditions>
              <eq property="title" expr="$title" />
           </conditions>
        </method>
        <method name="getByLabel" type="selectfirst">
           <parameter name="label" />
           <conditions>
              <eq property="label" expr="$label" />
           </conditions>
        </method>
    </factory>
</dao>
